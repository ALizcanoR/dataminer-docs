{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**.csproj"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": true,
      "disableDefaultFilter": false,
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "user-guide/**.md",
          "user-guide/**/toc.yml",
          "develop/**.md",
          "develop/toc.yml",
          "toc.yml",
          "*.md"
        ]
      },
	  {
        "files": [
          "schemadoc/**.md",
          "schemadoc/toc.yml"
        ]
      },
	  {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "user-guide/images/**",
          "develop/images/**",
		  "schemadoc/Protocol/images/**",
		  "schemadoc/Automation/images/**"
        ]
      }
    ],
	"overwrite": "overwrite/*.md",
    "dest": "_site",
    "globalMetadata": {
      "_appTitle": "DataMiner Docs",
      "_appFooter": "Â© Skyline Communications 2022",
      "_enableSearch": true,
      "_enableNewTab": true
    },
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "templates/slc_template"
    ],
    "postProcessors": [ "ExtractSearchIndex" ],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}
